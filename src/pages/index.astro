---
// index.astro
import '../styles/global.css';
import { initSmoke } from '../scripts/smoke.js';
import { initLenis } from '../scripts/lenis.js';
import { initPreloader, initScrollAnimations } from '../scripts/animations.js';
---

<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Studio ®</title>

	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet" />
</head>

<body>
<div id="grain"></div>
<div id="cursor"></div>
<canvas id="smoke-canvas"></canvas>

<!-- PRELOADER -->
<div id="preloader">
	<div class="pre-logo">STUDIO</div>
	<div class="pre-bar-outer"><div class="pre-bar" id="pre-bar"></div></div>
	<div class="pre-count" id="pre-count">0%</div>
</div>

<header>
	<a class="logo" href="#">STUDIO ®</a>
	<nav>
		<a href="#about">Agency</a>
		<a href="#services">Services</a>
		<a href="#contact">Contact</a>
	</nav>
</header>

<section class="hero" id="hero">
	<h1 class="hero-title">
		<span class="line"><span>Digital Design</span></span>
		<span class="line"><span>Boutique with</span></span>
		<span class="line"><span>Focus on</span></span>
		<span class="line"><span>Aesthetics</span></span>
	</h1>
	<p class="hero-desc">
		We craft digital experiences that live at the intersection of design and technology,
		making the future — today.
	</p>
	<div class="scroll-hint">Scroll Down</div>
</section>

<div class="marquee-section">
	<div class="marquee-track">
		<span class="marquee-item">Design</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Technology</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Motion</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Experience</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Innovation</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Design</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Technology</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Motion</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Experience</span><span class="marquee-item accent"> — </span>
		<span class="marquee-item">Innovation</span><span class="marquee-item accent"> — </span>
	</div>
</div>

<section class="about" id="about">
	<div class="about-left">
		<p class="about-label">About the studio</p>
		<h2 class="about-heading" id="about-heading">
			<span class="word"><span>Every</span></span>
			<span class="word"><span> project</span></span><br />
			<span class="word"><span>at the</span></span>
			<span class="word"><span> intersection</span></span><br />
			<span class="word"><span>of design</span></span>
			<span class="word"><span> &amp; tech</span></span>
		</h2>
	</div>
	<div class="about-text">
		<p>With over 200 projects completed, our team has built a deep understanding of user behavior patterns. We translate that into interfaces that do more than function — they resonate.</p>
		<p>Before design begins, we audit how your audience feels. Then we build an emotional solution that turns visits into conversions.</p>
		<div class="about-stat">
			<div><div class="stat-num" data-count="200">0</div><div class="stat-label">Projects</div></div>
			<div><div class="stat-num" data-count="10">0</div><div class="stat-label">Years</div></div>
			<div><div class="stat-num" data-count="68">0</div><div class="stat-label">Awards</div></div>
		</div>
	</div>
</section>

<section class="services" id="services">
	<div class="services-header">
		<span class="section-label">What we do</span>
		<span class="section-label">(04 services)</span>
	</div>
	<ul class="services-list">
		<li class="service-item"><div class="service-inner"><span class="service-name">UX Strategy</span><span class="service-num">01</span></div></li>
		<li class="service-item"><div class="service-inner"><span class="service-name">UI Design</span><span class="service-num">02</span></div></li>
		<li class="service-item"><div class="service-inner"><span class="service-name">Development</span><span class="service-num">03</span></div></li>
		<li class="service-item"><div class="service-inner"><span class="service-name">Motion &amp; 3D</span><span class="service-num">04</span></div></li>
	</ul>
</section>

<section class="contact" id="contact">
	<p class="contact-pre">Ready to start?</p>
	<h2 class="contact-heading">
		<span class="line"><span>Let's</span></span>
		<span class="line"><span>Talk</span></span>
	</h2>
	<a href="mailto:hello@studio.com" class="contact-cta"><span>hello@studio.com</span></a>
</section>

<footer>
	<p>© 2025 Studio ®</p>
	<p>Digital Design Boutique</p>
	<p>Dnipro — Los Angeles — Gdańsk</p>
</footer>

<script>
	import { initSmoke } from '../scripts/smoke.js';
	import { initLenis } from '../scripts/lenis.js';
	import { initPreloader, initScrollAnimations } from '../scripts/animations.js';
	import {initTrail} from "../scripts/trail";

	initLenis();
	initPreloader();
	initScrollAnimations();
	initSmoke();
	initTrail();
</script>

</body>
</html>